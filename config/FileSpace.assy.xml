<vfsc:FileSpace
  xmlns:vfsc="class:/spiralcraft/vfs/context/"
  >
  <authorities>      
  
    <vfsc:Authority>
     
      <debugLevel>INFO
      </debugLevel>
      
      <grafts>
        <vfsc:Redirect>
          <virtualURI>uploads/
          </virtualURI>
          <newBaseURI>context://files/uploads/
          </newBaseURI>
        </vfsc:Redirect>
      </grafts>
    </vfsc:Authority>
    
    <vfsc:Authority>
     
      <debugLevel>INFO
      </debugLevel>
      
      <authorityName>data
      </authorityName>
      
      <rootURI>${spiralcraft.builder.dir}/../data/live/
      </rootURI>
      
    </vfsc:Authority>
    
  </authorities>
</vfsc:FileSpace>
