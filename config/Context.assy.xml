<httpd:MultiAliasHttpServiceContext
  xmlns:httpd="class:/spiralcraft/pioneer/httpd/"
  xmlns:autofilter="class:/spiralcraft/servlet/autofilter/"
  >
                  
  <maxSessionInactiveInterval>7200
  </maxSessionInactiveInterval>
      
  <debug>true
  </debug>
  
  <filterMappings>
    <httpd:FilterMapping>
      <filterName>controller
      </filterName>
    
      <URLPattern>*
      </URLPattern>
    </httpd:FilterMapping>
  </filterMappings>
  
  <filters>
    <httpd:FilterHolder>
      <filterName>controller
      </filterName>
      
      <filterInstance>
        <autofilter:Controller>
          <dataURI>../data/live/
          </dataURI>
          <configURI>../config/
          </configURI>
        </autofilter:Controller>
      </filterInstance>
      
    </httpd:FilterHolder>
  </filters>
  
  <servletMappings>

    <httpd:ServletMapping>
       
      <servletName>file
      </servletName>
        
      <URLPatterns>/
      </URLPatterns>
        
      <URLPatterns>/data/*
      </URLPatterns>
    </httpd:ServletMapping>

    <httpd:ServletMapping>
       
      <servletName>webui
      </servletName>
        
      <URLPatterns>*.webui
      </URLPatterns>
        
    </httpd:ServletMapping>

  </servletMappings>
                    
  <servletHolders>
                        
    <httpd:ServletHolder>
                         
      <servletName>file
      </servletName>
         
      <servletClass>spiralcraft.pioneer.httpd.FileServlet
      </servletClass>
                           
    </httpd:ServletHolder>
                        
    <httpd:ServletHolder>
            
      <servletName>webui
      </servletName>
            
      <servletClass>spiralcraft.servlet.webui.UIServlet
      </servletClass>
            
    </httpd:ServletHolder>
    
  </servletHolders>
</httpd:MultiAliasHttpServiceContext>
