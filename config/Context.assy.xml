<httpd:MultiAliasHttpServiceContext
  xmlns:httpd="class:/spiralcraft/pioneer/httpd/"
  xmlns:autofilter="class:/spiralcraft/servlet/autofilter/"
  >
                  
  <documentRoot>webroot
  </documentRoot>

  <maxSessionInactiveInterval>7200
  </maxSessionInactiveInterval>
      
  <filterMappings>
    <httpd:FilterMapping>
      <filterName>controller
      </filterName>
    
      <URLPattern>*
      </URLPattern>
    </httpd:FilterMapping>
  </filterMappings>
  
  <filters>
    <httpd:FilterHolder>
      <filterName>controller
      </filterName>
      
      <filterInstance>
        <autofilter:Controller>
          <dataURI>../data/live/
          </dataURI>
          <configURI>../config/
          </configURI>
        </autofilter:Controller>
      </filterInstance>
      
    </httpd:FilterHolder>
  </filters>
  
  <servletMappings>

    <httpd:ServletMapping>
       
      <servletName>file
      </servletName>
        
      <URLPattern>/
      </URLPattern>
        
    </httpd:ServletMapping>
  </servletMappings>
                    
  <servletHolders>
                        
    <httpd:ServletHolder>
                         
      <servletName>file
      </servletName>
         
      <servletClass>spiralcraft.pioneer.httpd.FileServlet
      </servletClass>
                           
    </httpd:ServletHolder>
                        
  </servletHolders>
</httpd:MultiAliasHttpServiceContext>
