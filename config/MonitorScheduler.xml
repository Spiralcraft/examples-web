<?xml version="1.0" encoding="UTF-8"?>

<task:TaskScheduler
  xmlns:task="class:/spiralcraft/task/"
  xmlns:time="class:/spiralcraft/time"
  >

  <recurrent>
    <time:Schedule>
      <recurrenceRules>
        <time:RecurrenceRule>
          <frequency>MINUTELY
          </frequency>
          <interval>1
          </interval>
        </time:RecurrenceRule>
      </recurrenceRules>

      <basis>2010-07-27 00:00:30.0 PDT
      </basis>      
      
    </time:Schedule>
  </recurrent>
  
  <debug>false
  </debug>
  
  <scenario>
    <task:Eval>
      <x>@log("Hello!")
      </x>
    </task:Eval>
  </scenario>
</task:TaskScheduler>
