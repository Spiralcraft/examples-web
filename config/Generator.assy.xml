<task:TaskRunner
  xmlns:task="class:/spiralcraft/task/"
  xmlns:config="./"
  xmlns:example="class:/com/spiralcraft/example/"
  xmlns:dtest="class:/spiralcraft/data/test/"
  xmlns:test="class:/spiralcraft/test/"
  xmlns:dtask="class:/spiralcraft/data/task/"
  >
  
  <services>

    <config:FileSpace/>  
    <config:Space/>
  </services>
  
  <chain>
    <test:LoadGroup>
      <name>generate
      </name>
      
      <cycleFactor>32
      </cycleFactor>
      
      <chain>
        <task:Sequence>
    
          
          <scenarios>
            
            <task:Cycle>
            
              <maxCycles x="[test:LoadGroup].cycleFactor"/>
                
              <contextX><dtest:CounterX/>
              </contextX>
              
              <chain>
            
                <task:Sequence>
                  <scenarios>
                
            
            
                    <dtask:Session>
                      <chain>
                        <task:Eval>
                          <x>
                            [@example:Contact.buffer]
                              .(displayName:="Contact "+[context].count)
                              .@tuple.save()
                          </x>
                        </task:Eval>
            
                      
                      </chain>
                    </dtask:Session>
                    
                    
                    
                    <task:Eval>
                      <x>[context].increment()
                      </x>
                    </task:Eval>
                  
                  </scenarios>
                </task:Sequence>
              </chain>
            </task:Cycle>
          </scenarios>
            

        </task:Sequence>
      
      
      </chain>
      
      <throwFailure>true
      </throwFailure>
    </test:LoadGroup>
  </chain>
    
</task:TaskRunner>